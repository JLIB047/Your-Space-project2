<div class="card">
    <h2 class="card-header">Create New Post</h2>
    <form class="card-body new-post-form" id="new-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" id="post-title" name="post-title" class="form-input" />


        <label class="form-label" for="post_url">Post URL</label>
        <input id="post_url" name="post_url" class="form-input" />

        <label for="image" class="form-label">Image</label>
        <input type="file" id="image" name="image" class="button"/>

        <button type="submit" class="button">Create</button>
    </form>
</div>

<script src="/javascript/add-post.js"></script>