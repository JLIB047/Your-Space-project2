<div class="card">
    <h2 class="card-header">Create New Post</h2>

    <form class="card-body new-post-form" id="new-post-form" action= "posts" enctype="multipart/form-data" method="post">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" id="post-title" name="post-title" class="form-input" />
        <br>
        <br>
        <label class="form-label" for="post_url">Post URL</label>
        <input id="post_url" name="post_url" class="form-input" />
        <br>
        <br>
        <label class="form-label" for="image">Image</label>
        <input type="file" id="image" name="image" class="form-input" />
        <br>
        <br>
        <button type="submit" class="button">Create</button>
    </form>
</div>

<script src="/javascript/add-post.js"></script>